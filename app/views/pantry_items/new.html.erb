<% if @pantry_item.errors.any? %>
  <% @pantry_item.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h1>Add Pantry Item</h1>
</div>

<div class="row">
  <div class="col-md-offset-3 col-md-6">

    <form action="/create_pantry_item" class="form-horizontal">
      <!-- Label and input for user_id -->
      <div class="form-group">
        <div class="col-sm-10">
          <input type="hidden" id="user_id" name="user_id" placeholder="User" class="form-control" value="<%= current_user.id %>">
        </div>
      </div>

      <!-- Label and input for item_id -->
      <div class="form-group">
        <label for="item_id" class="col-sm-2 control-label">
          Item
        </label>
        <div class="col-sm-10">
          <%= select_tag(:item_id, options_from_collection_for_select(Item.all, :id, :name), :class => "form-control") %>
        </div>
      </div>

      <!-- Label and input for purchase_date -->
      <div class="form-group">
        <label for="purchase_date" class="col-sm-2 control-label">
          Purchase date
        </label>
        <div class="col-sm-10">
          <input type="date" id="purchase_date" name="purchase_date" placeholder="Purchase date" class="form-control" value="<%= @pantry_item.purchase_date %>">
        </div>
      </div>

      <!-- Label and input for expiration_date -->
      <div class="form-group">
        <label for="expiration_date" class="col-sm-2 control-label">
          Expiration date
        </label>
        <div class="col-sm-10">
          <input type="date" id="expiration_date" name="expiration_date" placeholder="Expiration date" class="form-control" value="<%= @pantry_item.expiration_date %>">
        </div>
      </div>

      <!-- Label and input for consumption_speed -->
      <div class="form-group">
        <label for="consumption_speed" class="col-sm-2 control-label">
          Consumption speed
        </label>
        <div class="col-sm-10">
          <input type="text" id="consumption_speed" name="consumption_speed" placeholder="Consumption speed" class="form-control" value="<%= @pantry_item.consumption_speed %>">
        </div>
      </div>

      <!-- Label and input for recurring -->
      <div class="form-group">
        <label for="recurring" class="col-sm-2 control-label">
          Recurring?
        </label>
        <div class="col-sm-10">
          <%= select_tag(:recurring, options_for_select({"Y" => "1", "N" => "0"}, :selected => true), :class => "form-control") %>
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <input type="submit" value="Create Pantry Item" class="btn btn-primary">
          <a href="/pantry_items" class="btn btn-danger">Cancel</a>
        </div>
      </div>
    </form>
  </div>
</div>
