<div class="page-header">
  <h1>Pantry Items</h1>
</div>

<p><a href="/pantry_items/new" class="btn btn-primary">Add a New Pantry Item</a></p>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Item</th>
      <th>Expiration Date</th>
      <th>Purchase Date</th>
      <th>Days to Consume</th>
      <th>Recurring</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @pantry_items.each do |pantry_item| %>
      <tr>
        <td><%= pantry_item.item.name %></td>
        <td><%= pantry_item.expiration_date.strftime('%b %e') %></td>
        <td><%= pantry_item.purchase_date.strftime('%b %e') %></td>
        <td><%= pantry_item.consumption_speed %></td>
        <td><%= pantry_item.recurring ? "Yes" : "No" %></td>
        <td>
          <a href="/pantry_items/<%= pantry_item.id %>" class="btn btn-primary">
            <i class="fa fa-search-plus"></i>
          </a>
        </td>
        <td>
          <a href="/pantry_items/<%= pantry_item.id %>/edit" class="btn btn-warning">
            <i class="fa fa-edit"></i>
          </a>
        </td>
        <td>
          <a href="/delete_pantry_item/<%= pantry_item.id %>" class="btn btn-danger">
            <i class="fa fa-trash-o"></i>
          </a>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

