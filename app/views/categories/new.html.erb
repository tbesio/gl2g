<% if @category.errors.any? %>
  <% @category.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h1>Add Category</h1>
</div>

<div class="row">
  <div class="col-md-offset-3 col-md-6">
    <form action="/create_category" class="form-horizontal">
      <!-- Label and input for name -->
      <div class="form-group">
        <label for="name" class="col-sm-2 control-label">
          Name
        </label>
        <div class="col-sm-10">
          <input type="text" id="name" name="name" placeholder="Name" class="form-control" value="<%= @category.name %>">
        </div>
      </div>

      <!-- Label and input for perishable -->
      <div class="form-group">
        <label for="perishable" class="col-sm-2 control-label">
          Perishable?
        </label>
        <div class="col-sm-10">
          <%= select_tag(:perishable, options_for_select({"Yes" => "1", "No" => "0"}, :selected => true), :class => "form-control") %>
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <input type="submit" value="Create Category" class="btn btn-primary">
          <a href="/categories" class="btn btn-danger">Cancel</a>
        </div>
      </div>
    </form>
  </div>
</div>
