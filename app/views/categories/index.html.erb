<div class="page-header">
  <h1>Categories</h1>
</div>

<p><a href="/categories/new" class="btn btn-primary">Add a New Category</a></p>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Perishable?</th>
      <th>Items in Category</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.name %></td>
        <td><%= category.perishable ? "Yes" : "No" %></td>
        <td><%= category.items.length %></td>
        <td>
          <a href="/categories/<%= category.id %>" class="btn btn-primary">
            <i class="fa fa-search-plus"></i>
          </a>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

